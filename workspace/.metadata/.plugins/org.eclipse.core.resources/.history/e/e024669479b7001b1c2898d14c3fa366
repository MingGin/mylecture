package kr.java.chapter3;

public class BitOperation {

	public static void main(String[] args) {
		int num1 = 5; // 0101
		int num2 = 10; //1010
		
		int result = num1 & num2; //0000
		System.out.println("num1 & num2 = "+result);
		result = num1 | num2; //1111
		System.out.println("num1 | num2 = "+result);
		result = num1 ^ num2; //1111
		System.out.println("num1 ^ num2 = "+result);
		result = ~num1 ; //1010
		System.out.println("~num1 = "+result);


	}

}
