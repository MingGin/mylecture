package kr.java.homework;

import java.util.Scanner;

public class homework05203 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int n = sc.nextInt();
		int sum = 0;
		int cnt = 0;
		
		for(int i = 0; i<=n; i++)
		{
			if(i%2 == 1)
			{
				sum += i;
				cnt ++;
			}
		}
		System.out.println("ÇÕ : " + sum);
		System.out.println("°³¼ö : " + cnt);
		

	}

}
