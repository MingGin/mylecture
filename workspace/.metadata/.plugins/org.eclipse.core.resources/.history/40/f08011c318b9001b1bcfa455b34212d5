package ex.java.input;

import java.util.Scanner;

public class Test4 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.print("계산식을 입력하시오 : ");
		String[] num = sc.nextLine().split(null); 
		
		int num1 = Integer.parseInt(num[0]);
		int num2 = Integer.parseInt(num[2]);
		
		if(num[1].equals("+"))
		{
			System.out.println("결과 : " + (Integer.parseInt(num[0]) + Integer.parseInt(num[2])) );
		}
		

	}

}
